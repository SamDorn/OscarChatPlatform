@{
    ViewData["Title"] = "Dettaglio Chat";
}

<link rel="stylesheet" href="~/css/chat.css" />
<script src="~/js/chat.js"></script>

<div class="full-page-chat">
    <!-- Header della chat -->
    <div class="chat-header">
        <h3>Chat Anonima</h3>
        <p>Stai chattando con un utente anonimo</p>
    </div>

    <!-- Area dei messaggi -->
    <div class="chat-messages" id="chatMessages">
        <!-- Messaggio ricevuto -->
        <div class="message received">
            <p>Ciao! Come stai?</p>
            <span class="message-time">10:00</span>
        </div>

        <!-- Messaggio inviato -->
        <div class="message sent">
            <p>Tutto bene, grazie! E tu?</p>
            <span class="message-time">10:01</span>
        </div>

    </div>

    <!-- Input per scrivere e inviare messaggi -->
    <div class="chat-input-area">
        <input type="text" id="chatInput" placeholder="Scrivi un messaggio..." />
        <button id="sendButton">Invia</button>
    </div>
</div>